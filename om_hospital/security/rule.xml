<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Kural olarak rollere sadece kendi oluşturduğu appointment ları görebilir kuralını ekledik -->
        <record id="receptionist_own_appointment_rule" model="ir.rule">
            <field name="name">receptionist: view own records</field>
            <field name="model_id" ref="model_hospital_appointment"/>
            <field name="groups" eval="[Command.set([ref('om_hospital.group_hospital_receptionist')])]"/>
            <!--
            groups şu şekilde de kullanılabilir
            <field name="groups" eval="[(4, ref('om_hospital.group_hospital_receptionist'))]"/>
             -->
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
        </record>

        <!-- Kural olarak doctor role' e tüm appointment ları görebilir kuralını ekledik -->
        <record id="doctor_view_all_appointment_rule" model="ir.rule">
            <field name="name">doctor: view all records</field>
            <field name="model_id" ref="model_hospital_appointment"/>
            <field name="groups" eval="[Command.set([ref('om_hospital.group_hospital_doctors')])]"/>
            <!--
            groups şu şekilde de kullanılabilir
            <field name="groups" eval="[(4, ref('om_hospital.group_hospital_doctors'))]"/>
             -->
            <field name="domain_force">[]</field> <!-- domain_force boş olması durumu true anlamına gelir -->
        </record>
    </data>
</odoo>