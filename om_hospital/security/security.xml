<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Security Group için Category oluşturma -->
        <record  id="module_category_hospital" model="ir.module.category">
            <field name="name">Hospital</field>
            <field name="sequence">5</field>
        </record>

        <!-- Security Grub için Receptionist Role oluşturma -->
        <record id="group_hospital_receptionist" model="res.groups">
            <field name="name">Receptionist</field>
            <field name="category_id" ref="om_hospital.module_category_hospital"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">This user will have access to appointments</field>
        </record>

        <!-- Security Grub için Doctor Role oluşturma -->
        <record id="group_hospital_doctors" model="res.groups" forcecreate="False"> <!-- forcecreate="False" güncelleme işleminde yeniden create etmez varolan kayıdı günceller-->
            <field name="name">Doctors</field>
            <field name="category_id" ref="om_hospital.module_category_hospital"/>
            <!--
            implied_ids e receptionist role id eklenerek doctor rolüne receptionist rolleri de eklenir, doctor üst role olur
            Bu durumda role seçimi multiple dan single selection' a çevrilir
            <field name="implied_ids" eval="[(4, ref('om_hospital.group_hospital_receptionist'))]"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            -->
            <field name="implied_ids" eval="[(4, ref('om_hospital.group_hospital_receptionist'))]"/>
            <field name="comment">This user will have access to patent details</field>
        </record>

    </data>
</odoo>